{
  "compilerOptions": {
    // project options
    "lib": [
      "ESNext",
      "dom"
    ],
    "rootDir": "src",
    "outDir": "lib",
    "removeComments": true,
    "target": "ES2022",

    // Module resolution
    "baseUrl": "./",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",

    // Source Map
    "sourceMap": true,
    "sourceRoot": "/",

    // Strict Checks
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,

    // Linter Checks
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}